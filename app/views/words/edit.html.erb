<h1>検索結果</h1>

<%= link_to "TOP", root_path %>

<h2>検索ワード"<%= @word.keyword %>"</h2>

<div class = "results">
    
    <% YAML.load(@word.results).each do |word|%>
    <p><%= word %></p>
    <% end %>
    
</div>
<div class="saved_words">

    <%= form_for (@word) do |f| %>
    <%= f.label :saved_words, "単語を保存できます" %>
    <%= f.text_area :saved_words, :size => "30x30"%>

    <div class="actions">
        <%= f.submit "保存" %>
    </div>
    <% end %>
    
</div>
